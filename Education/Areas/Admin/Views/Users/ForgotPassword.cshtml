@{
    ViewBag.Title = "Forgot Password";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>@ViewBag.Title - Zeal Education</title>

    <link rel="shortcut icon" href="~/Areas/Admin/Content/assets/img/favicon.png">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,500;0,600;0,700;1,400&display=swap">

    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/plugins/bootstrap/css/bootstrap.min.css">

    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/plugins/fontawesome/css/all.min.css">

    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/css/style.css">
</head>
<body>

    <div class="main-wrapper login-body">
        <div class="login-wrapper">
            <div class="container">
                <div class="loginbox">
                    <div class="login-left">
                        <img class="img-fluid" src="~/Areas/Admin/Content/assets/img/logo-admin.png" alt="Logo">
                    </div>
                    <div class="login-right">
                        <div class="login-right-wrap">
                            <h1 class="mb-3">Forgot Password</h1>
                            @using (Html.BeginForm())
                            {
                                <div class="text-success">
                                    @ViewBag.Message
                                </div>
                                <div class="form-group">
                                    @Html.TextBox("EmailID", "", new { @class = "form-control", placeholder = "Email Address" })
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary d-block mx-auto">Submit</button>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="~/Areas/Admin/Content/assets/js/jquery-3.5.1.min.js"></script>

    <script src="~/Areas/Admin/Content/assets/js/popper.min.js"></script>
    <script src="~/Areas/Admin/Content/assets/plugins/bootstrap/js/bootstrap.min.js"></script>

    <script src="~/Areas/Admin/Content/assets/js/script.js"></script>
</body>
</html>

