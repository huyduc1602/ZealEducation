@model Education.DAL.LearningInfo

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title">Details Learning Info</h3>
            <ul class="breadcrumb">
                <li class="breadcrumb-item">@Html.ActionLink("Candicates", "Index")</li>
                <li class="breadcrumb-item active">Details Learning Info</li>
            </ul>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <h5 class="form-title"><span>Learning Information</span></h5>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Candicate, htmlAttributes: new { @class = "control-label" }) :
                            @Html.DisplayFor(model => model.Candicate.Name, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ClassRoom, htmlAttributes: new { @class = "control-label" }) :
                            @Html.DisplayFor(model => model.ClassRoom.Name, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Tuition, htmlAttributes: new { @class = "control-label" }) :
                            @Html.DisplayFor(model => model.Tuition, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label" }) :
                            @(Model.Status ? "Join the class" : "Change class")
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Exam, htmlAttributes: new { @class = "control-label" }) :
                            @Html.DisplayFor(model => model.Exam.Name, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Number, htmlAttributes: new { @class = "control-label" }) :
                            @Html.DisplayFor(model => model.Number, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Point, htmlAttributes: new { @class = "control-label" }) :
                            @Html.DisplayFor(model => model.Point, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.User, htmlAttributes: new { @class = "control-label" }) :
                            @Html.DisplayFor(model => model.User.FullName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.CreatedAt, htmlAttributes: new { @class = "control-label" }) :
                            @Html.DisplayFor(model => model.CreatedAt, "{0:dd-MM-yyyy}", new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.UpdatedAt, htmlAttributes: new { @class = "control-label" }) :
                            @Html.DisplayFor(model => model.UpdatedAt, "{0:dd-MM-yyyy}", new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="col-12">
                        <a href="/Admin/LearningInfo/Edit/@Html.DisplayFor(model => model.Id)" class="btn btn-primary">Edit</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>